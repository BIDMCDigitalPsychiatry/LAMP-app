<Alloy>
	<Window id="forgetPassword" class="container" onClick="windowClick">
		<View id="mainView">
			<View id='headerContainer' class="headerContainer">
				<Require id = 'headerView' src ="innerHeader" title="Forgot Password">
				</Require>
			</View>
			<ScrollView scrollType="vertical" contentHeight="auto" id="outerScrollView" layout="vertical">
				<!-- <View id="contentView"> -->
					<ImageView id="logoImage">
					</ImageView>
					<View id="labelView">
						<Label id="titleLabel">
						</Label>
						<Label id="questionLabel">
						</Label>
					</View>
					<View id="emailView">
						<TextField  class="textBoxBroderLess " editable="false" maxLength="50" keyboardType ='Titanium.UI.KEYBOARD_TYPE_EMAIL'   id="emailLabel" hintText="L('emailLabel')" returnKeyType="DONE">
						</TextField>
						<View id="seperator">
						</View>
					</View>
					<Label id="signInButton" class="fullSizeSubmitButton" text="SUBMIT" onClick="onSendClick"  >
					</Label>
				<!-- </View> -->
				
			</ScrollView>
			<Label id="supportLabel"text="Copyright BIDMC Â© 2018. All rights reserved.">
				</Label>
		</View>
	</Window>
</Alloy>