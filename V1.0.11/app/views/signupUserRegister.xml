<Alloy>
	<Window id="signupUserRegister" swipeToClose="false" >
		<View id="signupUserRegisterContainer" class="container">
			<View id='headerContainer' class="headerContainer">
				<Require id = 'headerView' src ="innerHeader" title="L('signInUserSignUp')" ></Require>
			</View>
			<View class="bodyOuterContainer2" id="bodyOuterContainer2">
				<ScrollView id="bodyOuterContainer" class="bodyOuterContainer1" layout="vertical" top="25dp"   bottom="20dp" >
					<!-- <View id="scrollFillContainer" class="scrollFillContainer"> -->
					<!-- <View id="logoView">
					<View id="logoInnerView">
					<ImageView id="logo" ></ImageView>
					</View>
					</View> -->
					<!-- <View id='bodyContainer' class="bodyContainer" > -->
					<ImageView id="logo" ></ImageView>
					<TextField class="textBoxBroderLess returnKey" autocapitalization = "Titanium.UI.TEXT_AUTOCAPITALIZATION_WORDS" id="firstName" hintText="L('firstName')"></TextField>
					<View class="textBottomLine" ></View>
					<TextField  class="textBoxBroderLess returnKey" autocapitalization = "Titanium.UI.TEXT_AUTOCAPITALIZATION_WORDS" id="lastName" hintText="L('lastName')"></TextField>
					<View class="textBottomLine" ></View>
					<TextField  class="textBoxBroderLess returnKey" id="emailId" maxLength="50"  keyboardType ='Titanium.UI.KEYBOARD_TYPE_EMAIL'   hintText="L('emailId')" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE"></TextField>
					<View class="textBottomLine" ></View>
					<TextField  class="textBoxBroderLess masked returnKey password"  id="password"  hintText="L('password')"></TextField>
					<View class="textBottomLine"  ></View>
					<TextField  class="textBoxBroderLess masked password returnKeyDone" id="confirmPassword"   hintText="L('confirmPassword')"></TextField>
					<View class="textBottomLine"  ></View>
					<View id="languageView">
						<View  id="languageSlot"  onClick="onGetLanguage">
							<Label  id="langHeader" touchEnabled="false"  text="Select a Language"></Label>
							<View class="controllerView" touchEnabled="false">
								<Label touchEnabled="false" id="languageSlotLabel" text="English"></Label>
								<ImageView touchEnabled="false" id="downButtonImage"></ImageView>
							</View>
							<View id="horizontalDivider"></View>
						</View>
					</View>
					<Label id="signInCreateAndContinueButton" class="fullSizeSubmitButton" text="L('createAndContinue')" onClick="onSignInCreateAndContinueClick"  ></Label>

				</ScrollView>
				<Label id="supportLabel"text="Copyright BIDMC Â© 2018. All rights reserved."></Label>
			</View>
		</View>
	</Window>
</Alloy>