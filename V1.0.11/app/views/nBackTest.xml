<Alloy>
	<Window id="nBackTest" class="container">
		<View id='headerContainer' class="headerContainer">
			<Require id = 'headerView' src ="innerHeader" title="n-back" homeButtonImage="/images/home/home.png" >
			</Require>
		</View>
		<View id="contentView">
			<Label id="countTimer" text="01:15">
			</Label>
			<View height="Titanium.UI.SIZE" width="Titanium.UI.SIZE" layout="vertical">
				<Label id="gameLabel" text="0 BACK">
				</Label>
				<View id="outerView">
					<View id="box1" index="0" class="innerView">
						<Label id="letter1" class="alphabetsLabel" >
						</Label>
					</View>
				</View>
				<View id="answerView">
					<ImageView id="yesImage" onClick="yesClick">
					</ImageView>
					<ImageView id="noImage" onClick="noClick">
					</ImageView>
				</View>
			</View>
			<View id="messageView" height="Titanium.UI.SIZE" width="Titanium.UI.SIZE" visible="false" bottom="20dp" backgroundColor="#ffffff">
				<Label id="messageLabel" text="">
				</Label>
			</View>
		</View>
	</Window>
</Alloy>