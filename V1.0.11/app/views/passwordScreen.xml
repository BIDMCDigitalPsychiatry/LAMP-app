<Alloy>
	<Window id="passwordScreen" class="container"   onClick="windowClick">
		<View id="mainView">
			<ScrollView id="outerScrollView">
				<View id="contentView">
					<ImageView id="logoImage">
					</ImageView>
					<View id="labelView">
						<Label id="titleLabel">
						</Label>
						<Label id="questionLabel">
						</Label>
					</View>
					<View id="emailView">
						<View class="passboxView" id="passbox1" onClick="passwordClick">
							<View id="hint1" class="hintView" touchEnabled="false">
							</View>
							<TextField touchEnabled="true"  class="textBoxStyle" maxLength="1"  id="pass1">
							</TextField>
							<View class="seperator" touchEnabled="false">
							</View>
						</View>
						<View class="passboxView" id="passbox2" onClick="passwordClick">
							<View id="hint2" class="hintView" touchEnabled="false">
							</View>
							<TextField   class="textBoxStyle" maxLength="1"  id="pass2">
							</TextField>
							<View class="seperator" touchEnabled="false">
							</View>
						</View>
						<View class="passboxView" id="passbox3" onClick="passwordClick">
							<View id="hint3" class="hintView" touchEnabled="false">
							</View>
							<TextField   class="textBoxStyle" maxLength="1"  id="pass3">
							</TextField>
							<View class="seperator" touchEnabled="false">
							</View>
						</View>
						<View class="passboxView" id="passbox4" onClick="passwordClick" width="24.5%">
							<View id="hint4" class="hintView" touchEnabled="false">
							</View>
							<TextField   class="textBoxStyle" maxLength="1"  id="pass4">
							</TextField>
							<View class="seperator" touchEnabled="false">
							</View>
						</View>
					</View>
					<Label id="signInButton" class="fullSizeSubmitButton" text="SUBMIT" onClick="onSendClick"  >
					</Label>
				</View>
				<Label id="supportLabel"  text="Copyright BIDMC Â© 2018. All rights reserved.">
				</Label>
			</ScrollView>
		</View>
	</Window>
</Alloy>